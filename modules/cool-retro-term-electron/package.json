{
	"name": "cool-retro-term-electron",
	"version": "1.0.0",
	"description": "Electron-based CRT terminal application using cool-retro-term-renderer",
	"type": "module",
	"main": "dist/main.cjs",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"start": "electron .",
		"rebuild": "npx @electron/rebuild",
		"lint-and-format": "npx @biomejs/biome check --write --unsafe",
		"pack": "npx electron-builder --dir",
		"dist": "npx electron-builder",
		"dist:mac": "npx electron-builder --mac",
		"dist:win": "npx electron-builder --win",
		"dist:linux": "npx electron-builder --linux"
	},
	"build": {
		"appId": "com.remojansen.cool-retro-term",
		"productName": "Cool Retro Term",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"public/**/*",
			"node_modules/**/*",
			"!node_modules/*/{CHANGELOG.md,README.md,readme.md,README,test,__tests__,tests,powered-test,example,examples}",
			"!node_modules/.cache"
		],
		"mac": {
			"category": "public.app-category.developer-tools",
			"icon": "icons/crt.icns",
			"target": [
				{
					"target": "dmg",
					"arch": ["x64", "arm64"]
				},
				{
					"target": "zip",
					"arch": ["x64", "arm64"]
				}
			],
			"hardenedRuntime": true,
			"gatekeeperAssess": false
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": ["x64"]
				},
				{
					"target": "zip",
					"arch": ["x64"]
				}
			],
			"icon": "icons/256x256/cool-retro-term.png"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"linux": {
			"target": [
				{
					"target": "AppImage",
					"arch": ["x64"]
				},
				{
					"target": "deb",
					"arch": ["x64"]
				}
			],
			"category": "Development",
			"icon": "icons"
		},
		"publish": {
			"provider": "github",
			"owner": "remojansen",
			"repo": "cool-retro-term-webgl"
		}
	},
	"keywords": [
		"terminal",
		"electron",
		"xterm",
		"xterm.js",
		"crt",
		"retro",
		"webgl",
		"cool-retro-term",
		"pty",
		"node-pty"
	],
	"author": "Remo H. Jansen",
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/remojansen/cool-retro-term-webgl"
	},
	"bugs": {
		"url": "https://github.com/remojansen/cool-retro-term-webgl/issues"
	},
	"homepage": "https://github.com/remojansen/cool-retro-term-webgl#readme",
	"dependencies": {
		"@xterm/xterm": "^6.0.0",
		"cool-retro-term-renderer": "*",
		"node-pty": "^1.0.0",
		"three": "^0.182.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.10.2",
		"electron": "33.2.1",
		"electron-builder": "^25.1.8",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2"
	}
}
